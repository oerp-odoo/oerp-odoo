<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.stamp.config.stock</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="product_stamp_configurator.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <div name="stamp_quantity_mold_default" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    name="stamp_default_stock_routes"
                >
                    <div class="o_setting_right_pane">
                        <label
                            for="stock_route_stamp_default_ids"
                            string="Product Routes"
                        />
                        <div class="text-muted">
                            Select default product routes for Die and Counter Die. These will be set on created products via configurator.
                        </div>
                         <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="stock_route_stamp_default_ids"
                                    widget="many2many_checkboxes"
                                    options="{'no_create': True}"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
