<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="github_repo_view_tree" model="ir.ui.view">
        <field name="name">github.repo.tree</field>
        <field name="model">github.repo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner"/>
                <field name="auth_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="github_repo_view_form" model="ir.ui.view">
        <field name="name">github.repo.form</field>
        <field name="model">github.repo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group name="main" string="Main">
                            <field name="name"/>
                            <field name="owner"/>
                            <field name="auth_id"/>
                        </group>
                        <group name="misc" string="Misc">
                            <field name="active" widget="boolean_toggle"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="github_repo_action" model="ir.actions.act_window">
        <field name="name">Repositories</field>
        <field name="res_model">github.repo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="github_repo_menu"
        parent="github_root_menu"
        action="github_repo_action"
        sequence="10"
    />
</odoo>
