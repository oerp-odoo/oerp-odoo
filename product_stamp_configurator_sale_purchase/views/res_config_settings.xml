<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.stamp.config.purchase</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="product_stamp_configurator.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <div name="stamp_quantity_mold_default" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    name="stamp_default_service_to_purchase"
                >
                    <div class="o_setting_left_pane">
                        <field name="service_to_purchase_stamp"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            for="service_to_purchase_stamp"
                            string="Service to Purchase"
                        />
                        <div class="text-muted">
                            Set Subcontract Service option when creating mold product.
                        </div>
                    </div>
                </div>
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    name="stamp_default_product_partner_supplier"
                >
                    <div class="o_setting_right_pane">
                        <label for="partner_supplier_default_stamp_id" string="Vendor"/>
                        <div class="text-muted">
                            Set Vendor on product when creating it via configurator.
                        </div>
                         <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="partner_supplier_default_stamp_id"
                                    options="{'no_create': True}"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
