<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Some languages can't have same phrasing as English, so we
separate quotation/order where it is used.-->
<template id="doc_name">
    <span t-if="is_quote">quotation</span>
    <span t-else="">order</span>
</template>

<!-- Must copy/paste to be able to split it in translation file -->
<template id="doc_name_proforma">
    <span t-if="is_quote">quotation</span>
    <span t-else="">order</span>
</template>

<template id="mail_body_sale_send" name="Sales Order: Send by email">
    <t t-set="is_quote" t-value="object.state in ('draft', 'sent')"/>
    <div style="margin: 0px; padding: 0px;">
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
            Hello,
            <br/><br/>
            Your
            <t t-if="ctx.get('proforma')">
                Pro forma invoice for <t
                        t-call="sale_mail_templates.doc_name_proforma"
                    >quotation</t> <strong t-out="object.name or ''">S00052</strong>
                <t t-if="object.origin">
                    (with reference: <t t-out="object.origin or ''"/> )
                </t>
                amounting in <strong
                        t-out="format_amount(object.amount_total, object.pricelist_id.currency_id) or ''"
                    >$ 10.00</strong> is available.
            </t>
            <t t-else="">
                <t t-call="sale_mail_templates.doc_name">quotation</t> <strong
                        t-out="object.name or ''"
                    />
                <t t-if="object.origin">
                    (with reference: <t t-out="object.origin or ''">S00052</t> )
                </t>
                amounting in <strong
                        t-out="format_amount(object.amount_total, object.pricelist_id.currency_id) or ''"
                    >$ 10.00</strong> is ready for review.
            </t>
            <br/><br/>
            Do not hesitate to contact us if you have any questions.
            <br/>
        </p>
    </div>
</template>
</odoo>
