<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.sharepoint.sale.dir</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="before">
                <button
                    name="action_open_sharepoint_directory"
                    string="Open Sharepoint Directory"
                    type="object"
                />
            </button>
            <group name="sale_info" position="after">
                <group name="sharepoint" string="Sharepoint">
                    <field
                        name="sharepoint_sale_dir_url"
                        widget="url"
                        attrs="{'invisible': [('sharepoint_sale_dir_url', '=', False)]}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
