<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.stamp</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div
                    class="app_settings_block"
                    data-string="Stamp"
                    string="Stamp"
                    data-key="product_stamp_configurator"
                    groups="product_stamp_configurator.stamp_group_manager"
                >
                    <h2>Defaults</h2>
                    <div
                        class="row mt16 o_settings_container"
                        name="stamp_settings_container_defaults"
                    >
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            name="stamp_default_die_type"
                        >
                            <div class="o_setting_right_pane">
                                <label for="die_default_id"/>
                                <div class="text-muted">
                                    Select default Die Type for stamp configurator.
                                </div>
                                 <div class="content-group">
                                    <div class="mt16">
                                        <field
                                            name="die_default_id"
                                            options="{'no_create': True}"
                                            class="oe_inline"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            name="stamp_default_counter_die_category"
                        >
                            <div class="o_setting_right_pane">
                                <label for="category_default_counter_die_id"/>
                                <div class="text-muted">
                                    Select default Counter-Die category for stamp configurator.
                                </div>
                                 <div class="content-group">
                                    <div class="mt16">
                                        <field
                                            name="category_default_counter_die_id"
                                            options="{'no_create': True}"
                                            class="oe_inline"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            name="stamp_default_mold_category"
                        >
                            <div class="o_setting_right_pane">
                                <label for="category_default_mold_id"/>
                                <div class="text-muted">
                                    Select default Mold category for stamp configurator.
                                </div>
                                 <div class="content-group">
                                    <div class="mt16">
                                        <field
                                            name="category_default_mold_id"
                                            options="{'no_create': True}"
                                            class="oe_inline"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            name="stamp_quantity_mold_default"
                        >
                            <div class="o_setting_right_pane">
                                <label for="quantity_mold_default"/>
                                <div class="text-muted">
                                    Select default Mold Quantity for stamp configurator. Will only be used for Embossed Designs.
                                </div>
                                 <div class="content-group">
                                    <div class="mt16">
                                        <field
                                            name="quantity_mold_default"
                                            options="{'no_create': True}"
                                            class="oe_inline"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Multi-Company</h2>
                    <div
                        class="row mt16 o_settings_container"
                        name="stamp_settings_container_multi_company"
                    >
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            id="stamp_products_shared"
                        >
                            <div class="o_setting_left_pane">
                                <field name="stamp_products_shared"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="stamp_products_shared"/>
                                <div class="text-muted">
                                    Share products between multiple companies. If checked, when stamp product is created, it will not have current user company set on those products, making accessible to all products.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="stamp_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field
            name="context"
        >{'module' : 'product_stamp_configurator', 'bin_size': False}</field>
    </record>
</odoo>
