<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stamp_pricelist_view_tree" model="ir.ui.view">
        <field name="name">stamp.pricelist.tree</field>
        <field name="model">stamp.pricelist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="currency_id" invisible="1"/>
                <field name="name"/>
                <field name="min_area"/>
                <field
                    name="price_counter_die"
                    widget="monetary"
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                />
                <field name="mold_of_die_perc"/>
                <field name="quantity_die_mold_free"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="stamp_pricelist_view_form" model="ir.ui.view">
        <field name="name">stamp.pricelist.form</field>
        <field name="model">stamp.pricelist</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group name="left">
                            <field name="currency_id" invisible="1"/>
                            <field name="name"/>
                            <field name="min_area"/>
                            <field
                                name="price_counter_die"
                                widget="monetary"
                                options="{'currency_field': 'currency_id', 'field_digits': True}"
                            />
                            <field name="margin_default_ratio"/>
                        </group>
                        <group name="right">
                            <field name="mold_of_die_perc"/>
                            <field name="quantity_die_mold_free"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <separator string="Design Prices"/>
                    <field name="item_ids"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stamp_pricelist_action" model="ir.actions.act_window">
        <field name="name">Pricelists</field>
        <field name="res_model">stamp.pricelist</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
