<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="machine_email_view_form" model="ir.ui.view">
        <field name="name">machine.email.form</field>
        <field name="model">machine.email</field>
        <field name="arch" type="xml">
            <form>
                <group name="main">
                    <group name="left">
                        <field name="machine_group_ids" widget="many2many_tags"/>
                        <field name="sub_subject" attrs="{'invisible': [('email_type', '!=', 'scheduled')], 'required': [('email_type', '=', 'scheduled')]}"/>
                        <field name="date" attrs="{'invisible': [('email_type', '!=', 'scheduled')], 'required': [('email_type', '=', 'scheduled')]}"/>
                        <field name="duration" attrs="{'invisible': [('email_type', '!=', 'scheduled')], 'required': [('email_type', '=', 'scheduled')]}"/>
                        <field name="priority" attrs="{'invisible': [('email_type', '!=', 'scheduled')], 'required': [('email_type', '=', 'scheduled')]}"/>
                        <field name="user_id" attrs="{'invisible': [('email_type', '!=', 'scheduled')]}"/>
                    </group>
                    <group name="right">
                        <field name="email_type"/>
                        <field name="mail_template_id" attrs="{'invisible': [('email_type', '!=', 'scheduled')], 'required': [('email_type', '=', 'scheduled')]}"/>
                    </group>
                </group>
                <group name="general_email">
                    <field name="subject" attrs="{'invisible': [('email_type', '!=', 'general')], 'required': [('email_type', '=', 'general')]}"/>
                    <field name="body" attrs="{'invisible': [('email_type', '!=', 'general')], 'required': [('email_type', '=', 'general')]}"/>
                </group>
                <group name="recipients">
                    <field name="recipient_ids">
                        <tree editable="bottom">
                            <field name="machine_instance_id"/>
                            <field name="partner_ids" widget="many2many_tags" required="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_create_mail_messages"
                        string="Send Emails" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="machine_email_action" model="ir.actions.act_window">
        <field name="name">Send Emails</field>
        <field name="res_model">machine.email</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="machine_email_menu" parent="machine_action_menu" action="machine_email_action" sequence="1"/>
</odoo>
