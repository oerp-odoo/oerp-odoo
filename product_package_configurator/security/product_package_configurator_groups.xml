<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_package_management" model="ir.module.category">
        <field name="name">Package Configurator</field>
        <field
            name="description"
        >Helps you manage package products configurator.</field>
        <field name="sequence">10</field>
    </record>
    <record id="package_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_package_management"/>
    </record>
    <record id="package_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_package_management"/>
        <field name="implied_ids" eval="[(4, ref('package_group_user'))]"/>
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
</odoo>
