<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="package_box_setup_view_tree" model="ir.ui.view">
        <field name="name">package.box.setup.tree</field>
        <field name="model">package.box.setup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="setup_type"/>
            </tree>
        </field>
    </record>

    <record id="package_box_setup_view_form" model="ir.ui.view">
        <field name="name">package.box.setup.form</field>
        <field name="model">package.box.setup</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="general" string="General">
                        <group name="left">
                            <field name="name"/>
                            <field name="setup_type"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="constraints" string="Constraints">
                            <field name="box_type_ids" widget="many2many_tags"/>
                            <field name="min_layout_length"/>
                            <field name="min_layout_width"/>
                            <field name="max_layout_length"/>
                            <field name="max_layout_width"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="rules" string="Rules">
                            <field name="rule_ids">
                                <tree editable="bottom">
                                    <field name="min_qty"/>
                                    <field name="setup_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="package_box_setup_action" model="ir.actions.act_window">
        <field name="name">Setup</field>
        <field name="res_model">package.box.setup</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
