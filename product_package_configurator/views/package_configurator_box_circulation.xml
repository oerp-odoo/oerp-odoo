<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="package_configurator_box_circulation_view_tree" model="ir.ui.view">
        <field name="name">package.configurator.box.circulation.tree</field>
        <field name="model">package.configurator.box.circulation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="quantity"/>
                <field name="unit_cost"/>
                <field name="total_cost"/>
                <field name="total_lamination_outside_cost"/>
                <field name="total_lamination_inside_cost"/>
                <field name="total_base_carton_quantity"/>
                <field name="total_base_outside_wrappingpaper_quantity"/>
                <field name="total_base_inside_wrappingpaper_quantity"/>
                <field name="total_lid_carton_quantity"/>
                <field name="total_lid_outside_wrappingpaper_quantity"/>
                <field name="total_lid_inside_wrappingpaper_quantity"/>
            </tree>
        </field>
    </record>

    <record id="package_configurator_box_circulation_view_form" model="ir.ui.view">
        <field name="name">package.configurator.box.circulation.form</field>
        <field name="model">package.configurator.box.circulation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group name="quantities" string="Quantities">
                            <field name="quantity"/>
                            <field name="total_base_carton_quantity"/>
                            <field name="total_base_outside_wrappingpaper_quantity"/>
                            <field name="total_base_inside_wrappingpaper_quantity"/>
                            <field name="total_lid_carton_quantity"/>
                            <field name="total_lid_outside_wrappingpaper_quantity"/>
                            <field name="total_lid_inside_wrappingpaper_quantity"/>
                        </group>
                        <group name="costs" string="Costs">
                            <field name="unit_cost"/>
                            <field name="total_lamination_outside_cost"/>
                            <field name="total_lamination_inside_cost"/>
                            <field name="total_cost"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="circulation_setups" string="Setup">
                            <field name="circulation_setup_ids">
                                <tree editable="bottom">
                                    <field name="part"/>
                                    <field name="setup_rule_id"/>
                                    <field name="setup_raw_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
