<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.intrastat</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="product_stamp_configurator.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <div name="stamp_quantity_mold_default" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    name="stamp_default_intrastat_code"
                >
                    <div class="o_setting_right_pane">
                        <label for="intrastat_stamp_default_code_id"/>
                        <div class="text-muted">
                            Select default Commodity Code for stamp configurator.
                        </div>
                         <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="intrastat_stamp_default_code_id"
                                    options="{'no_create': True}"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
